<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="1"

    android:minHeight="100dp">

    <LinearLayout
        android:id="@+id/head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp">
        <ImageView
            android:id="@+id/imp_img_userpic"
            android:layout_width="40dp"
            android:layout_height="40dp" />
        <!--TextView
            android:id="@+id/imp_text_floor"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:layout_marginTop="3dp"
            android:text="1楼" /-->

    </LinearLayout>

    <LinearLayout
        android:layout_toRightOf="@+id/head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="36dp"
            android:orientation="horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp">
            <TextView
                android:id="@+id/imp_text_nickname"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center_vertical"
                android:text="666" />

            <TextView
                android:id="@+id/imp_text_time"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginRight="10dp"
                android:gravity="center"
                android:textSize="10sp"
                android:text="2018-03-18 21:08:21"
                android:layout_alignParentTop="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/imp_text_grade"
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:text="5颗星"
                android:scrollbars="vertical"
                android:textColor="@color/colorAccent"
                android:textSize="20sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/evaluate1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/textview_border"
                android:gravity="center_vertical"
                android:text="态度友好"
                android:textColor="@color/grey"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/evaluate2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/textview_border"
                android:layout_marginLeft="11dp"
                android:gravity="center_vertical"
                android:text="准时送达"
                android:textColor="@color/grey"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/evaluate3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:background="@drawable/textview_border"
                android:layout_marginLeft="11dp"
                android:gravity="center_vertical"
                android:text="人好看"
                android:textColor="@color/grey"
                android:textSize="13sp" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <TextView
            android:id="@+id/content"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="11dp"
            android:gravity="center_vertical"
            android:text="很有礼貌"
            android:textColor="@color/grey"
            android:textSize="18sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="10dp"/>
        <View
            android:id="@+id/view"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:background="@color/gainsboro" />
    </LinearLayout>

</RelativeLayout>
