<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@mipmap/bg_start"
    android:baselineAligned="false">

    <ImageView
        android:id="@+id/blank11"
        android:layout_width="10dp"
        android:layout_height="48dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center">



        <ImageView
            android:id="@+id/logo"
            android:layout_width="wrap_content"
            android:layout_height="240dp"
            android:layout_weight="1"
            android:scaleType="fitCenter"
            android:src="@mipmap/logo" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/blank1"
            android:layout_width="10dp"
            android:layout_height="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <EditText
                android:id="@+id/ForgetPhoneNumber"
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:alpha="0.8"
                android:background="@drawable/shape_white"
                android:hint="手机号"
                android:inputType="phone"
                android:maxLength="11"
                android:textColor="@color/darkslategrey"
                android:textSize="16dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/blank4"
            android:layout_width="10dp"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">

            <EditText
                android:id="@+id/ForgetIdentifyCode"
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:alpha="0.8"
                android:background="@drawable/shape_white"
                android:hint="验证码"
                android:textColor="@color/darkslategrey"
                android:textSize="16dp" />

            <ImageView
                android:id="@+id/blank6"
                android:layout_width="20dp"
                android:layout_height="10dp" />

            <Button
                android:id="@+id/ForgetSendIdentifyCode"
                android:layout_width="90dp"
                android:layout_height="40dp"
                android:alpha="0.95"
                android:background="@drawable/shape_white"
                android:text="发送验证码"
                android:textColor="@color/darkslategrey" />

        </LinearLayout>

        <ImageView
            android:id="@+id/beautifulBlank"
            android:layout_width="10dp"
            android:layout_height="10dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center">


            <EditText
                android:id="@+id/ForgetPassword"
                android:layout_width="240dp"
                android:layout_height="40dp"
                android:alpha="0.8"
                android:ems="10"
                android:inputType="textPassword"
                android:background="@drawable/shape_white"
                android:textColor="@color/darkslategrey"
                android:textSize="15sp"
                android:maxLength="16"
                android:hint="新密码"/>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/ForgetFrameLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ImageView
            android:id="@+id/beautifulBlank1"
            android:layout_width="10dp"
            android:layout_height="10dp" />


        <Button
            android:id="@+id/ForgetSet"
            android:layout_width="240dp"
            android:layout_height="40dp"
            android:alpha="0.95"
            android:background="@drawable/shape_white"
            android:text="重 设 密 码"
            android:textColor="@color/darkslategrey"
            android:textSize="17dp" />

        <ImageView
            android:id="@+id/blank3"
            android:layout_width="30dp"
            android:layout_height="50dp" />


    </LinearLayout>

</LinearLayout>