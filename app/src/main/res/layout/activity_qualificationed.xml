<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <RelativeLayout
        android:id="@+id/person_titlebar"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/theme">

        <TextView
            android:id="@+id/person_title"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:ellipsize="marquee"
            android:gravity="center_horizontal|center"
            android:singleLine="true"
            android:text="开始体验"
            android:textColor="@color/white"
            android:textSize="22sp" />

        <Button
            android:id="@+id/back_button"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:gravity="center"
            android:layout_gravity="center"
            android:background="@mipmap/ic_keyboard_arrow_left_white_24dp" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/back_button"
        android:background="@color/darkslategrey"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        android:background="@color/whitesmoke">

        <View
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:background="@color/whitesmoke"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@mipmap/ic_check_box_black_24dp"
                android:layout_marginLeft="50dp"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="75dp"
                android:src="@mipmap/ic_check_box_black_24dp"/>

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="75dp"
                android:src="@mipmap/ic_indeterminate_check_box_black_24dp"/>


        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:layout_marginLeft="25dp"
                android:text="学号认证"
                android:textSize="15sp"/>

            <View
                android:layout_width="15dp"
                android:layout_height="40dp"
                android:background="@color/whitesmoke"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:gravity="center"
                android:text="缴纳押金"
                android:textSize="15sp"/>

            <View
                android:layout_width="15dp"
                android:layout_height="40dp"
                android:background="@color/whitesmoke"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="开始体验"
                android:textSize="15sp"/>

        </LinearLayout>

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginLeft="285dp"
            android:src="@mipmap/rectangle"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text=" 亲爱的用户，您已完成学生身份认证"
            android:textSize="15sp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center_vertical"
            android:text="  我们将妥善保管您的押金"
            android:textSize="15sp"/>

    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#ffffff"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@drawable/round_radius2"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="开始体验"
        android:textSize="16sp" />


</LinearLayout>

